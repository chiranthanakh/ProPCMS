<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_irfc_ALl_data_view"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="?selectableItemBackground"
                android:src="@drawable/eye"
                app:tint="@color/icon_color" />

            <ImageView
                android:id="@+id/iv_irfc_action_invoice"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_invoice"
                app:tint="@color/icon_color" />
            <ImageView
                android:id="@+id/iv_irfc_action_view"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:layout_height="30dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:background="?selectableItemBackground"
                android:src="@drawable/ic_send"
                app:tint="@color/icon_color" />
        </LinearLayout>
        <CheckBox
            android:id="@+id/ch_irfc_check_data"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:gravity="center" />

        <ImageView
            android:id="@+id/iv_irfc_upload"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="5dp"
            android:background="?selectableItemBackground"
            android:src="@drawable/ic_upload"
            app:tint="@color/icon_color" />

        <ImageView
            android:id="@+id/iv_irfc_status_modification"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginStart="70dp"
            android:background="?selectableItemBackground"
            android:padding="5dp"
            android:src="@drawable/pending" />

        <TextView
            android:id="@+id/tv_irfc_pc_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="FAS-UDN001"
            android:gravity="center"
            android:layout_marginStart="45dp"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_invoiceNo"
            android:gravity="center"
            android:layout_marginStart="15dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="FAS-UDN001"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_InvoiceDate"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="14-03-2022"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_group"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Group"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_assignment"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Assignment"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_billTo"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Bill To"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_billingAddress"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Billing Address"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_referenceNumber"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Reference Number"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_kindAttention"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Kind Attention"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_region"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Region"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_irfc_place"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Place"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_gstinNo"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="GSTIN No"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_irfc_panOfCustomer"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="PAN of Customer"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_irfc_taxableAmount"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Taxable Amount"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_gstRate"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="GST Rate"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_forMonth"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="For Month"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_description"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="300dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_hsn_Sac"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="HSN/SAC"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_particulars"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Particulars"
            android:textColor="@color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_irfc_stateOf_supplyCode"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="State of Supply &amp; Code"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_transactionType"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Transaction Type"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_irfc_invoiceWith_whom"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Invoice With Whom"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="1dp"
        android:background="@color/grey_very_light" />

</LinearLayout>